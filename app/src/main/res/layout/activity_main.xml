<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:clickable="false"
    android:id="@+id/scrollciew_main_screen"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/my_main_layout"
        android:orientation="vertical">

        <Button
            style="@style/button_solid"
            android:layout_marginTop="30dp"
            android:text="What&apos;s for dinner?"
            android:id="@+id/whats_for_dinner_button"
            android:onClick="showFoodPrefsMenu" />

        <Button style="@style/button_solid"
            android:layout_marginTop="30dp"
            android:text="Show all the dinners"
            android:onClick="showDinnerList" />

        <Button style="@style/button_solid"
            android:layout_marginTop="30dp"
            android:text="Show daily special"
            android:onClick="showDailySpecial" />
    </LinearLayout>

</ScrollView>